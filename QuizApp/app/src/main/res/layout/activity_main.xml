                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_six_r1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_six_r2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
